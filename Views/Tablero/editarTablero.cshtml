@{ 
    ViewData["Title"] = "Editar Tablero";
}

@model espacioViewModels.EditarTableroViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="EditarTableroFromForm" method="post" id="formulariosEdicion">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario">Usuario a Asignar</label>
            <select asp-for="@Model.IdUsuarioPropietario" class="form-select">
                @foreach(Usuario usuario in Model.Usuarios) {
                    <option value="@usuario.Id">@usuario.NombreUsuario</option>
                }  
            </select>
        <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" id="descripcion" />
    </div>
    <button type="submit" class="boton-enviar" >Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }