@{ 
    ViewData["Title"] = "Editar Tarea";
}

@model espacioViewModels.EditarTareaViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="EditarTareaFromForm" method="post">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.IdTablero"></label>
        <input value="@Model.IdTablero" asp-for="@Model.IdTablero" class="form-control" id="idTablero" />
        <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input value="@Model.Nombre" asp-for="@Model.Nombre" class="form-control" id="nombre" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado"></label>
        <select asp-for="@Model.Estado" asp-items="Html.GetEnumSelectList<estadoTarea>()" class="form-control">
            <option value="">Seleccionar Estado</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input value="@Model.Descripcion" asp-for="@Model.Descripcion" class="form-control" id="descripcion" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color"></label>
        <input value="@Model.Color" asp-for="@Model.Color" class="form-control" id="color" />
        <span asp-validation-for="@Model.Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado"></label>
        <input value="@Model.IdUsuarioAsignado" asp-for="@Model.IdUsuarioAsignado" class="form-control" id="idUsuarioA" />
        <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }