@{
    ViewData["Title"] = "Tareas";
}

@model List<Tarea>

<h2>Lista de Tareas</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Id Tablero</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Descripcion</th>
            <th>Color</th>
            <th>Id Usuario Asignado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr style="background-color: #@tarea.Color !important;">
                <td hidden>@tarea.Id</td>
                <td>@(tarea.Id_tablero == 999 ? "No asignado" : tarea.Id_tablero.ToString())</td> @*Muestra No asignado si el Id = 999*@
                <td>@tarea.Nombre</td>
                <td>@tarea.Estado</td>
                <td>@tarea.Descripcion</td>
                <td>
                    <span class="color-circle" style="background-color: #@tarea.Color;"></span> <!-- Circulo de color dinamico -->
                </td>
                <td>@(tarea.IdUsuarioAsignado == 999 ? "No asignado" : tarea.IdUsuarioAsignado.ToString())</td> @*Muestra No asignado si el Id = 999*@
                <td>
                    <a asp-controller="Tarea" asp-action="EditarTarea" asp-route-idTarea="@tarea.Id" id="buttonEdit">Editar</a>
                    <a asp-controller="Tarea" asp-action="DeleteTarea" asp-route-idTarea="@tarea.Id" id="buttonRemove" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <a asp-controller="Tarea" asp-action="AgregarTarea" id="buttonAdd">Agregar Tarea</a>
        </tr>
    </tfoot>
</table>