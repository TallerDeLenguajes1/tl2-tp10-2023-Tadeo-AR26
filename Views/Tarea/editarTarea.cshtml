@{ 
    ViewData["Title"] = "Editar Tarea";
}

@model espacioViewModels.EditarTareaViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="EditarTareaFromForm" method="post" id="formulariosEdicion">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.IdTablero">Tablero a Asignar</label>
            <select asp-for="@Model.IdTablero" class="form-select">
                @foreach(Tablero tablero in Model.Tableros) {
                    <option value="@tablero.Id">@tablero.Nombre</option>
                }  
            </select>
        <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input value="@Model.Nombre" asp-for="@Model.Nombre" class="form-control" id="nombre" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado"></label>
        <select asp-for="@Model.Estado" asp-items="Html.GetEnumSelectList<estadoTarea>()" class="form-control">
            <option value="">Seleccionar Estado</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input value="@Model.Descripcion" asp-for="@Model.Descripcion" class="form-control" id="descripcion" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color"></label>
        <select asp-for="@Model.Color" asp-items="Html.GetEnumSelectList<colorTarea>()" class="form-control">
            <option value="">Seleccionar Color</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado">Usuario a Asignar</label>
            <select asp-for="@Model.IdUsuarioAsignado" class="form-select">
                @foreach(Usuario usuario in Model.Usuarios) {
                    <option value="@usuario.Id">@usuario.NombreUsuario</option>
                }  
            </select>
        <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="boton-enviar" >Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }